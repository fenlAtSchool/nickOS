require("display.pack")
require("utils.pack")
globalThis.decreaseClick = function(){
	isClicking = registerClick
	registerClick = false
	if(isClicking){
		let m = ''
		while(clickFunctions.length > 0){
			m = clickFunctions.shift()
			m()
		}
	}
	requestExecFunction(decreaseClick, 'tempOutput')
}
globalThis.getPlayerLook = function(){
	let z = api.getPlayerFacingInfO(user)
	let look = z.camPos
	z = z.dir
	z[0] *= (50-look[2])/z[2]
	z[1] *= (50-look[2])/z[2]
	z[0] += look[0]
	z[1] += look[1]
	z[0] = Math.round(z[0] + displayx/2)
	z[1] = Math.round(displayy - z[1])
	if(inBounds(z, 0, displayx - 3) && inBounds(z[1], 0, displayy - 3)){
		return z
	}
	return [0,0]
	requestExecFunction(getPlayerLook,'')
}
globalThis.onPlayerClick = function(id){
  if(id == user){
    registerClick = true
  }
}
clickFunctions = []
decreaseClick()
getPlayerLook()
